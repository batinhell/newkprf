<div id="mainslider">
  <div class="scrollable">
    <ul class="slideitems">
      <% @slider.each do |post| %>
        <li><%= link_to image_tag(post.image_url(:slider).to_s), post_path(post) %></li>
      <% end %>
    </ul>
  </div>
  <div class="slider_nav">
    <ul>
      <% i = 1 %>
      <% @slider.each do |post| %>
        <li class="border" id="mainslidernav-<%= i %>">
          <a href="<%= post_path(post) %>">
            <span class="title"><%= post.title %></span>
          </a>
        </li>
        <% i = i+1  %>
      <% end %>
    </ul>
  </div>
</div>
