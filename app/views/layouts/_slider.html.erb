<div id="slidorion"> 
  <div id="slider">
    <% @slider.each do |post| %>
    <div class="slide">
      <%= link_to image_tag(post.image_url(:slider).to_s), post_path(post) %>
    </div>
    <% end %>
  </div>
   
  <div id="accordion">
    <% @slider.each do |post| %>
    <div class="link-header"><%= post.title %></div>
    <div class="link-content"></div> 
    <% end %>
  </div>
</div>