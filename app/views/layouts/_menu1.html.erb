<% @pages = Page.all %>
<ul class="menuTop nav">
  <% @pages.each do |page| %>
    <li><%= link_to page.title, page_path(page) %>
      <% @subpages = page.subpages %>
      <% unless @subpages.empty? %>
        <div class="subMenu">
          <ul>
            <% @subpages.each do |subpage| %>
              <li><%= link_to subpage.title, page_path(subpage) %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </li>
  <% end %>
</ul>
