<div id="ph_title"><a href="/albums">Фотогалерея</a> </div>
<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <% $i = true %>
    <% @albums = Album.limit(3).each do |album| %>
      <div class="<%= $i == true ? "active item" : "item" %>"><a href="<%= album_path(album) %>"><img src="<%= album.photos.first.image.slider.url %>"></a>
        <div class="carousel-caption"><%= album.name %></div>
      </div>
    <% $i = false %>
    <% end %>
  </div>
</div>