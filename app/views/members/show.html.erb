<div class="member_wrap row-fluid">
  <div class="member_inner">
    <div class="span4">
      <div class="member_image">
        <%= image_tag @member.image_url(:slider), :class => 'img-polaroid' %>
      </div>
    </div>
      
    <div class="span8">
      <div class="member_name"><h1><%= @member.name %></h1></div> 
      <div class="member_desc"><%= @member.description %></div>
    </div>
    
    <div class="clearfix"></div>    
    <div class="member_bio"><%= @member.biography.html_safe %></div>
  </div>
</div>
<% if @related_news %>
  <div class="related">
    <h3>Новости по теме</h3>
    <% @related_news.each do |post| %>
      <div class="related_title"><%= link_to post.title, post_path(post) %></div>   
    <% end %>
  </div>
<% end %>



